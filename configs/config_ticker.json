{
    "exp_name": "single_ticker",
    "logging_dir": "logs",
    "trainer": {
        "name": "trainers.sequence_predictor_trainer.SequencePredictorTrainer",
        "args": {
            "num_epochs": 200,
            "valdn_n_epochs": 10,
            "checkpt_n_valdn": 1,
            "log_n_iter": 250,
            "loss_reduction": "mean",
            "num_dataloder_workers": 0,
            "log_tensorboard": true
        }
    },
    "model": {
        "name": "models.encoder_decoder_recurrent.EncoderDecoderRecurrent",
        "args": {
            "recurrent_type" : "rnn",
            "rec_hidden_size": 160,
            "encoder_sizes": [],
            "rec_ip_size": 16,
            "num_layers" : 1,
            "decoder_sizes": [],
            "future_enc_sizes": [],
            "seperate_future_recurrent": false,
            "perturb_init": true
        }
    },
    "dataset_common": {
        "args": {
            "batch_size": 16,
            "input_features": ["average", "high", "low"],
            "output_features": ["average"],
            "input_seq_len": 3,
            "output_seq_len": 4,
            "data_dir": "data/ticker_data",
            "frequency": "3Min",
            "ticker": "nvda"
        }
    },

    "train_dataset": {
        "name": "dataset_loaders.iex_finance_dataset.IEXDataset",
        "args": {
            "num_batches": 500,
            "skip_past": 3,
            "overlap" : true
        }
    },
    "valdn_dataset": {
        "name": "dataset_loaders.iex_finance_dataset.IEXDataset",
        "args": {
            "num_batches": 2,
            "skip_past": 0,
            "overlap" : false
        }
    },
    "loss": {
        "name": "torch.nn.MSELoss",
        "args": {
            "reduction": "mean"
        }
    },

    "optimizer": {
        "name": "torch.optim.Adadelta",
        "args": {
            "lr": 2,
            "eps": 1e-8,
            "rho": 0.9
        }
    },

    "lr_scheduler": {
        "name": "torch.optim.lr_scheduler.StepLR",
        "args": {
            "step_size": 800,
            "gamma": 0.9
        }
    }
}
