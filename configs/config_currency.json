{
    "exp_name": "single_ticker",
    "logging_dir": "logs",
    "trainer": {
        "name": "trainers.sequence_predictor_trainer.SequencePredictorTrainer",
        "args": {
            "num_epochs": 200,
            "valdn_n_epochs": 10,
            "checkpt_n_valdn": 1,
            "log_n_iter": 250,
            "batch_size": 16,
            "loss_reduction": "mean",
            "num_dataloder_workers" : 0,
            "log_tensorboard" : false
        }
    },

    "model": {
        "name": "models.encoder_decoder_lstm.EncoderDecoderLSTM",
        "args": {
            "recurrent_ip_size": 8,
            "num_layers": 1,
            "rnn_hidden_size": 128,
            "perturb_init" : true
        }
    },

    "dataset_common": {
        "args": {
            "input_features": ["average"],
            "output_features": ["average"],
            "output_seq_len": 15,
            "input_seq_len": 3,
            "data_dir": "data/currency_data",
            "frequency": "1Day"
        }
    },

    "train_dataset": {
        "name": "dataset_loaders.currency_data.CurrencyData",
        "args": {
            "country": "India",
            "num_samples": 1000,
            "skip_past": 100
        }
    },

    "valdn_dataset": {
        "name": "dataset_loaders.currency_data.CurrencyData",
        "args": {
            "country": "India",
            "num_samples": 100,
            "skip_past": 0
        }
    },

    "loss" : {
        "name" : "torch.nn.MSELoss",
        "args" : {
            "reduction" : "mean"
        }
    },

    "optimizer": {
        "name": "torch.optim.Adadelta",
        "args": {
            "lr": 2,
            "eps": 1e-8,
            "rho": 0.9
        }
    },

    "lr_scheduler": {
        "name": "torch.optim.lr_scheduler.StepLR",
        "args": {
            "step_size": 800,
            "gamma": 0.9
        }
    }
}